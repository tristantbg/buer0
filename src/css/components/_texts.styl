#texts
	span(1)
	padding 0 ($padding*2)
	margin-bottom ($padding*4)
	+below($md)
		padding 0 $paddingMobile
		margin-bottom ($paddingMobile*4)
	.text
		span(1)
		float right
		height 0
		transition height .6s $kinetic
		overflow hidden
		text-align right
		padding-left calc(100% - 23em)
		p
			margin-bottom $padding
			line-height 1.7
			&:first-child
				padding-top $padding
				+below($md)
					padding-top $paddingMobile